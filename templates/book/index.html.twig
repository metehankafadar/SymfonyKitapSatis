{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Comments{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">
                {{ include('user/usermenu.html.twig') }}
                <div class="blog-post-area">
                    <h2 class="title text-center">User Books List</h2>
                    <div class="single-blog-post">
                        <div class="post-meta">


                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Image</th>
                                    <th>Image Ekle</th>
                                    <th>Type</th>
                                    <th>Yazar</th>
                                    <th>Yayinci</th>
                                    <th>Fiyat</th>
                                    <th>SFiyat</th>
                                    <th>Status</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for book in books %}
                                    <tr>
                                        <td>{{ book.id }}</td>
                                        <td>{{ book.title }}</td>
                                        <td><img src="{{  asset('uploads/images/'~ book.image)}}" height="40"></td>
                                        <td>
                                            <a href="javascript:window.open('{{ path('user_image_new',{'id': book.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizeable=no,width=900,height=600');">
                                                <img src="{{  asset('assets/admin/img')}}/new.jpg" height="25">
                                            </a>
                                        </td>
                                        <td>{{ book.type }}</td>
                                        <td>{{ book.Yazar }}</td>
                                        <td>{{ book.Yayinci }}</td>
                                        <td>{{ book.fiyat }}</td>
                                        <td>{{ book.sFiyat }}</td>
                                        <td>{{ book.status }}</td>
                                        <td>
                                            <a href="{{ path('user_book_show', {'id': book.id}) }}"class="btn btn-primary m-t">show</a>
                                            <a href="{{ path('user_book_edit', {'id': book.id}) }}"class="btn btn-primary m-t">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="15">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('user_book_new') }}"class="btn btn-primary m-t">Create new</a>


                        </div>
                    </div>
                </div></div></div></section>

{% endblock %}
