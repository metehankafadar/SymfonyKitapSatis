
{% extends 'homebase.html.twig' %}

{% block title %}Contact US | {{setting[0].title}}{% endblock %}
{% block keywords %}{{setting[0].keywords}}{% endblock %}
{% block description %}{{setting[0].description}} {% endblock %}

{% block body %}

    <div id="contact-page" class="container">
        <div class="bg">
            <div class="row">



                <div class="col-sm-6"> <h2 class="title text-center">Location </h2>{{setting[0].contact | raw}}</div>
                <div class="col-sm-4">
                    <div class="contact-info">
                        <h2 class="title text-center">Contact Info</h2>

                        <address>
                            <p>{{setting[0].company}}</p>
                            <p>{{setting[0].address}}</p>
                            <p>Mobile: {{setting[0].phone}}</p>
                            <p>Fax: {{setting[0].fax}}</p>
                            <p>Email: {{setting[0].email}}</p>
                        </address>
                        <div class="social-networks">
                            <h2 class="title text-center">Social Networking</h2>
                            <ul>
                                <li>
                                    <a href="facebook.com/{{setting[0].facebook}}"><i class="fa fa-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="twitter.com/{{setting[0].twitter}}"><i class="fa fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="instagram.com/{{setting[0].instagram}}"><i class="fa fa-instagram"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="contact-form">
                        <h2 class="title text-center">Get In Touch</h2>
                        <div class="status alert alert-success" style="display: none"></div>
                        {{ include('messages.html.twig') }}
                        <form id="main-contact-form" class="contact-form row" name="messages" method="post">
                            <div class="form-group col-md-6">
                                <input type="text" id="messages_name" name="messages[name]" maxlength="20" class="form-control" required="required" placeholder="Name">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="email" id="messages_email" name="messages[email]" maxlength="40" class="form-control" required="required" placeholder="Email">
                            </div>
                            <div class="form-group col-md-12">
                                <input type="text" id="messages_subject" name="messages[subject]" maxlength="75" class="form-control" required="required" placeholder="Subject">
                            </div>
                            <div class="form-group col-md-12">
                                <textarea id="messages_message" name="messages[message]" maxlength="255" required="required" class="form-control" rows="8" placeholder="Your Message Here"></textarea>
                            </div>
                            <div class="form-group col-md-12">
                                <input type="hidden" name="token" value="{{csrf_token('form-message')}}" />
                                <input type="submit" name="submit" class="btn btn-primary pull-right" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/#contact-page-->


{% endblock %}

