{% extends 'homebase.html.twig' %}

{% block title %}{{setting[0].title}}{% endblock %}
{% block keywords %}{{setting[0].keywords}}{% endblock %}
{% block description %}{{setting[0].description}} {% endblock %}
{% block slider %}{% include('home/slider.html.twig') %}{% endblock %}
{% block sidebar %}{{ include('home/sidebar.html.twig') }} {% endblock %}
{% block body %}

    <div class="col-sm-9 padding-right">
        <div class="features_items"><!--features_items-->
            <h2 class="title text-center">Features Items</h2>
            {% for book in books %}
            <div class="col-sm-4">

                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">

                            <img src="{{  asset('uploads/images/'~ book.image)}}" style="height:268px;width:249px"  />
                            <h2>{{book.sfiyat}}$</h2>
                            <p>{{book.title}}</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <a href="{{ path('book_show_a',{'id':book.id}) }}">
                                <h2>{{book.sfiyat}}$</h2>
                                <p>{{book.title}}</p>
                                <a href="{{ path('book_show_a',{'id':book.id}) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                            </div>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                            <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                        </ul>
                    </div>
                </div>

            </div>
            {% endfor %}
        </div><!--features_items-->

        <div class="carousel-inner">
                <h2 class="title text-center">New Books</h2>
                {% for rs in newbooks %}
                <div class="col-sm-4">
                    <div class="product-image-wrapper">

                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="{{  asset('uploads/images/'~ rs.image)}}" style="height:268px;width:134px" alt="">
                                <h2>${{ rs.sfiyat }}</h2>
                                <p>{{ rs.title }}</p>
                                <a href="{{ path('book_show_a',{'id':rs.id}) }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                            </div>

                        </div>

                    </div>
                </div>
                {% endfor %}
                </div>
            </div>
        </div>







    </section>
{% endblock %}
