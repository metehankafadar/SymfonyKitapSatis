{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
    <section>
     <div class="container">
        <div class="row">
    {{ include('user/usermenu.html.twig') }}
            <div class="blog-post-area">
                <h2 class="title text-center">Profile Page</h2>
                <div class="single-blog-post">
                    <div class="post-meta">

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ app.user.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ app.user.surname }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{  asset('uploads/images/'~ app.user.image)}}" height="40"></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ app.user.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ app.user.createdAt ? app.user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


                    <div class="pager-area">
                        <ul class="pager pull-right">
                            <li><a href="{{ path('user_edit', {'id': app.user.id}) }}">Edit Profile</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            </div></div></div></section>

{% endblock %}
