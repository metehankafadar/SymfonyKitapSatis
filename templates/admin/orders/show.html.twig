{% extends 'adminbase.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Shipinfo</th>
                <td>{{ order.shipinfo }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
        <tr>
            <td>ID</td>
            <td>Product NAME</td>
            <td>SALES PRICE</td>
            <td>QUANTITY</td>
            <td>TOTAL</td>
            <td>STATUS</td>
        </tr>
        </thead>
        <TBODY>
        {% set total=0 %}
        {% for rs in orderdetail %}
        <tr>
            <td>{{ rs.id }}</td>
            <td>{{ rs.name }}</td>
            <td>{{ rs.price }}</td>
            <td>{{ rs.quantity }}</td>
            <td>{{ rs.status }}</td>
        </tr>
        {% endfor %}
        <tr>
          <td><form action="{{ path('admin_orders_update',{'id':order.id}) }}" method="post"></td>

        </tr>
        <tr>
            <th>Admin Note</th>
            <td> <textarea id="shipinfo" name="shipinfo">{{ order.shipinfo }} </textarea></td>
            <th>Status </th>
            <td><select id="status" name="status">
                    <option>{{ order.status }}</option>
                    <option>NEW</option>
                    <option>ORDERED</option>
                    <option>Shipping</option>
                </select> </td>
            <td><input type="submit" value="UPDATE"></td>
        </tr>
        </form>
        </TBODY>
    </table>

    <a href="{{ path('admin_orders_index') }}">back to list</a>

    <a href="{{ path('admin_orders_edit', {'id': order.id}) }}">edit</a>

    {{ include('admin/orders/_delete_form.html.twig') }}





{% endblock %}
