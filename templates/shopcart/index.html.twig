{% extends 'homebase.html.twig' %}

{% block title %}Shopcart index{% endblock %}
{% block body %}

    <section id="cart_items">

        <div class="container">

            <div class="breadcrumbs">

                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Shopping Cart</li>
                </ol>
            </div>
    <div class="table-responsive cart_info">
        <table class="table table-condensed">
            <thead>
            <tr class="cart_menu">
                <td class="image">Image</td>
                <td class="description"></td>
                <td class="price">Fiyat</td>
                <td class="quantity">Quantity</td>
                <td class="total">Total</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            {% set total=0 %}
            {% for shopcart in shopcarts %}
            <tr>
                <td class="cart_product">
                    <a href="{{ path('book_show_a', {'id': shopcart.bookid}) }}"><img src="{{  asset('uploads/images/'~ shopcart.image)}}" alt="" style="width: 110px;height: 110px"> </a>
                </td>
                <td class="cart_description">
                    <h4><a href="{{ path('book_show_a', {'id': shopcart.bookid}) }}"><p>{{ shopcart.title }}</p></a></h4>

                </td>
                <td class="cart_price">
                    <p>{{shopcart.s_fiyat}}tl</p>
                </td>
                <td class="cart_quantity">
                    <div class="cart_quantity_button">
                        <a class="cart_quantity_up" href=""> + </a>
                        <input class="cart_quantity_input" type="text" name="quantity" value="{{ shopcart.quantity }}" autocomplete="off" size="2">
                        <a class="cart_quantity_down" href=""> - </a>

                    </div>
                </td>
                <td class="cart_total">
                    <p class="cart_total_price">{% set total=total+(shopcart.quantity * shopcart.s_fiyat)%} {{ shopcart.quantity*shopcart.s_fiyat }}tl</p>
                </td>
                <td class="cart_delete">
                    <a href="{{ path('shopcart_del', {'id': shopcart.id}) }}" class="btn-danger">Delete </a>
                </td>
            </tr>

            {% endfor %}

            </tbody>


        </table>
        <a href="{{ path('orders_new') }}" class="breadcrumb"   style="width: 400px;background: orange;color: white"> {{ total }}tl Degerindeki Ürünleri satın al</a>
    </div>

        </div>

        </div>
    </section>


{% endblock %}
